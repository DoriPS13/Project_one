<!DOCTYPE html>
<html>
<head>
	<link rel="stylesheet" href="http://cdn.foundation5.zurb.com/foundation.css">
	<link rel="stylesheet" href="/css/style.css">
	<title>Ramen Hunter</title>
</head>
	<body id="results_body">

	<% if (isAuthenticated) { %>
		<%- include partials/signed_in_nav.ejs %>
	<% }else{ %>
		<%- include partials/not_signed_in_nav.ejs %>
	<% } %>
	<div class="row">
		<div class="small-2 large-4 columns"></div>
		<div id="results" class="small-4 large-4 columns">
			<ul class="inline-list">
				<% if (ramenResults.length < 1) { %>
					<h2>Based on your location you should probably move</h2>
					<h3>Seriously, no ramen found</h3>
				<% } else { %>
				 <h1>Ramen Hunt Complete!<h1>
				 <h3>Commence Selection and Consumption</h3>
				<% } %>

			 	<% ramenResults.forEach(function (ramen) {%>
				 		<p><a href="/ramen/<%= ramen.id %>">
				 		<h3><%= ramen.name %></h3></a>
				 		<h4><%= ramen.venue.name %></h4>
				 		<br>
				 		</p>

				<% }); %>
			</ul>
		</div>
		<div class="small-6 large-4 columns"></div>
		</div>

</body>
</html>